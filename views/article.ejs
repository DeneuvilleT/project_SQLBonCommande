<h1>
   <%=h1%>
</h1>

<a href="/">Retourner à l'accueil</a>

<h2 class="order-form-customer">
   <%= data2[0].customerName%>
</h2>
<h2 class="order-form-customer">
   <%= data2[0].contactFirstName + data2[0].contactLastName%>
</h2>
<h3 class="order-form-customer">
   <%= data2[0].addressLine1%>
</h3>
<h3 class="order-form-customer">
   <%= data2[0].city%>
</h3>

<hr>

<table class="standard-table">
   <caption>
      <%=title%>
   </caption>
   <thead>
      <tr>
         <th>
            <%=col1%>
         </th>
         <th>
            <%=col2%>
         </th>
         <th>
            <%=col3%>
         </th>
         <th>
            <%=col4%>
         </th>
      </tr>
   </thead>
   <tbody>
      <% data.forEach((ele)=>{ %>
         <tr>
            <td>
               <%= ele.productName %>
            </td>
            <td>
               <%= ele.priceEach %> €
            </td>
            <td>
               <%= ele.quantityOrdered %>
            </td>
            <td>
               <%=(ele.quantityOrdered * ele.priceEach)%> €
            </td>
         </tr>
         <%})%>
   </tbody>
   <tfoot>
      <tr>
         <td></td>
         <td></td>
         <th>
            Montant Total HT
         </th>
         <th>
            <%= data3[0]['SUM(quantityOrdered * priceEach)'].toFixed(2)%> €
         </th>
      </tr>
      <tr>
         <td></td>
         <td></td>
         <th>
            TVA ( 20% )
         </th>
         <th>
            <%= (data3[0]['SUM(quantityOrdered * priceEach)']*0.20).toFixed(2)%> €
         </th>
      </tr>
      <tr>
         <td></td>
         <td></td>
         <th>
            Montant Total TTC
         </th>
         <th>
            <%= (data3[0]['SUM(quantityOrdered * priceEach)'] + (data3[0]['SUM(quantityOrdered * priceEach)']*0.20)).toFixed(2)%> €
         </th>
      </tr>
   </tfoot>
</table>